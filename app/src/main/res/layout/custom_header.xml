<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/categories_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/met_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/categories_header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp">
    </TextView>

    <TextView
        android:id="@+id/hours_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/met_header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp">
    </TextView>

    <TextView
        android:id="@+id/calories_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/hours_header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>